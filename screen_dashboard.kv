#:kivy 2.1.0
<ScreenDashboard>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 15
			spacing: 15
			size_hint: 1, 0.08

			MDIconButton:
				id: bt_menu
				icon: "menu"
				icon_size: "25sp"
				size_hint_x: 0.1
				on_press: root.nav_main_menu()

			MDLabel:
				id: subtitle            
				text: "UNO MOTOR CONTROLLER"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 30
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Main_Logo.png'
                size_hint_x: 0.25
                allow_stretch: True 

		# choose product layout
		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.primary_color
			size_hint: 1, 0.07
			padding:10
			spacing:10

			MDLabel:
				text: "DASHBOARD"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 20
				color: 1, 1, 1
				size_hint_y: 0.1

		MDBoxLayout:
			id: layout_dashboard
			orientation: "vertical"
			size_hint: 1, 0.85

			MDBoxLayout:
				id: layout_gauge
				md_bg_color: app.theme_cls.accent_color
				size_hint: 1, 0.5

			MDBoxLayout:
				id: layout_variables
				md_bg_color: app.theme_cls.accent_color
				orientation: "horizontal"
				size_hint: 1, 0.25

				MDGridLayout:
					cols:2
					row_force_default: True
					row_default_height: 15
					md_bg_color: app.theme_cls.accent_color
					padding:40
					spacing:10

					MDLabel:
						text: "Mode"
						halign: 'left'
						valign: 'middle'    
						bold: True
						font_size: 15

					MDLabel:
						id: lb_dashboard_drive_amps
						text: "--"
						halign: 'center'
						valign: 'middle'    
						bold: True
						font_size: 15

					MDLabel:
						text: "Motor"
						halign: 'left'
						valign: 'middle'    
						bold: True
						font_size: 15

					MDLabel:
						id: lb_dashboard_drive_volts
						text: "Stopped 0d 00:00:00"
						halign: 'center'
						valign: 'middle'    
						bold: True
						font_size: 15

					MDLabel:
						text: "Speed Source"
						halign: 'left'
						valign: 'middle'    
						bold: True
						font_size: 15

					MDLabel:
						id: lb_dashboard_downhole_volts
						text: "Target Speed"
						halign: 'center'
						valign: 'middle'    
						bold: True
						font_size: 15	

					MDLabel:
						text: "Tool"
						halign: 'left'
						valign: 'middle'    
						bold: True
						font_size: 15

					MDLabel:
						id: lb_dashboard_intake_pressure
						text: "None"
						halign: 'center'
						valign: 'middle'    
						bold: True
						font_size: 15	

					MDLabel:
						text: "Tool Status"
						halign: 'left'
						valign: 'middle'    
						bold: True
						font_size: 15

					MDLabel:
						id: lb_dashboard_motor_temp
						text: "<PIC_STATUS & PIC_TOOL>"
						halign: 'center'
						valign: 'middle'    
						bold: True
						font_size: 15	

					MDLabel:
						text: "Trending"
						halign: 'left'
						valign: 'middle'    
						bold: True
						font_size: 15

					MDLabel:
						id: lb_dashboard_intake_temp
						text: "--"
						halign: 'center'
						valign: 'middle'    
						bold: True
						font_size: 15

				MDGridLayout:
					cols:2
					row_force_default: True
					row_default_height: 20
					md_bg_color: app.theme_cls.accent_color
					padding:80
					spacing:10

					MDLabel:
						text: "Last Stopped By:"
						halign: 'left'
						valign: 'middle'    
						bold: True
						font_size: 15

					MDLabel:
						id: lb_dashboard_last_shutdown
						text: "Manual Stop"
						halign: 'center'
						valign: 'middle'    
						bold: True
						font_size: 15

					MDLabel:
						text: "Alarms"
						halign: 'left'
						valign: 'middle'    
						bold: True
						font_size: 15

			MDBoxLayout:
				orientation: "horizontal"
				size_hint: 1, 0.25
				
				MDBoxLayout:
					id: layout_graph
					md_bg_color: app.theme_cls.accent_color
					size_hint: 0.7, 1

				MDGridLayout:
					cols:2
					size_hint: 0.3, 1
					# row_force_default: True
					# row_default_height: 25
					md_bg_color: app.theme_cls.accent_color
					padding:60, 5
					spacing:40, 5

					MDLabel:
						text: "OFF / ON"
						halign: 'center'
						valign: 'middle'    
						bold: True
						font_size: 15

					MDLabel:
						text: "HAND / AUTO"
						halign: 'center'
						valign: 'middle'    
						bold: True
						font_size: 15

					MDSwitch:
						id: switch_on_off
						size_hint_x: 0.2

					MDSwitch:
						id: switch_hand_auto
						size_hint_x: 0.2

					MDRoundFlatButton:
						id: button_start
						text: "START"
						size_hint: 0.4, 0.5
						text_color: "FFFFFF"
						md_bg_color: "00AA00"

					MDRoundFlatButton:
						id: button_stop
						text: "STOP"
						size_hint: 0.4, 0.5
						text_color: "FFFFFF"
						md_bg_color: "AA0000"
