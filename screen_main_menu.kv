#:kivy 2.1.0
<ScreenMainMenu>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 1, 0.15

			MDIconButton:
				id: bt_menu
				icon: "menu"
				icon_size: "54sp"
				size_hint_x: 0.1
				on_press: root.nav_main_menu()

			MDLabel:
				id: subtitle            
				text: "UNO MOTOR CONTROLLER"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 42
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Main_Logo.png'
                size_hint_x: 0.25
                allow_stretch: True                   

		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.primary_color
			size_hint: 1, 0.1
			padding:10
			spacing:10

			MDLabel:
				text: "MAIN MENU"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 32
				color: 1, 1, 1
				size_hint_y: 0.1

		MDGridLayout:
			id: layout_products
			cols:3
			md_bg_color: app.theme_cls.accent_color
			row_force_default: True
			row_default_height: 180
			size_hint: 1, 0.75
			padding:60
			spacing:60

			MDCard:
				id: card_uno_modules
				ripple_behavior: True
				radius:  [dp(24), dp(24), dp(24), dp(24)]
				on_press: root.nav_uno_modules()

				MDLabel:
					text: "UNO MODULES"
					halign: 'center'
					valign: 'middle'
					font_size: 48
					bold: True

			MDCard:
				id: card_uno_setup
				ripple_behavior: True
				radius:  [dp(24), dp(24), dp(24), dp(24)]
				on_press: root.nav_uno_setup()

				MDLabel:
					text: "UNO SETUP"
					halign: 'center'
					valign: 'middle'
					font_size: 48
					bold: True

			MDCard:
				id: card_datalog_history
				ripple_behavior: True
				radius:  [dp(24), dp(24), dp(24), dp(24)]
				on_press: root.nav_datalog_history()

				MDLabel:
					text: "DATALOG & HISTORY"
					halign: 'center'
					valign: 'middle'
					font_size: 48
					bold: True

			MDCard:
				id: card_analog_display
				ripple_behavior: True
				radius:  [dp(24), dp(24), dp(24), dp(24)]
				on_press: root.nav_analog_display(1000,4,3500)

				MDLabel:
					text: "ANALOG SETUP & DISPLAY"
					halign: 'center'
					valign: 'middle'
					font_size: 48
					bold: True

			MDCard:
				id: card_status
				ripple_behavior: True
				radius:  [dp(24), dp(24), dp(24), dp(24)]
				on_press: root.nav_status(1000,4,3500)

				MDLabel:
					text: "STATUS"
					halign: 'center'
					valign: 'middle'
					font_size: 48
					bold: True

			MDCard:
				id: product_1000ml
				ripple_behavior: True
				radius:  [dp(24), dp(24), dp(24), dp(24)]
				on_press: root.uno_modules(1000,4,3500)

				MDLabel:
					text: "FAULT & ALARM"
					halign: 'center'
					valign: 'middle'
					font_size: 48
					bold: True

			MDCard:
				id: product_1000ml
				ripple_behavior: True
				radius:  [dp(24), dp(24), dp(24), dp(24)]
				on_press: root.uno_modules(1000,4,3500)

				MDLabel:
					text: "SCADA & SECURITY"
					halign: 'center'
					valign: 'middle'
					font_size: 48
					bold: True

			MDCard:
				id: product_1000ml
				ripple_behavior: True
				radius:  [dp(24), dp(24), dp(24), dp(24)]
				on_press: root.uno_modules(1000,4,3500)

				MDLabel:
					text: "LOGIC FUNCTION"
					halign: 'center'
					valign: 'middle'
					font_size: 48
					bold: True

			MDCard:
				id: card_amp_chart
				ripple_behavior: True
				radius:  [dp(24), dp(24), dp(24), dp(24)]
				on_press: root.nav_amp_chart()

				MDLabel:
					text: "AMP CHART"
					halign: 'center'
					valign: 'middle'
					font_size: 48
					bold: True
				