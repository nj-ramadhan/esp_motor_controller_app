#:kivy 2.1.0

<ScreenAmpChart>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 1, 0.15

			MDRoundFlatIconButton:
				id: bt_menu
				icon: "menu"
				size_hint_x: 0.25
				on_press: root.nav_main_menu()

			MDLabel:
				id: subtitle            
				text: "UNO MOTOR CONTROLLER"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 32
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Main_Logo.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# choose product layout
		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.primary_color
			size_hint: 1, 0.1
			padding:10
			spacing:10

			MDLabel:
				text: "AMP CHART"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 24
				color: 1, 1, 1
				size_hint_y: 0.1

		BoxLayout:
			id: layout_amp_chart
			orientation: "horizontal"
			spacing: 20




				