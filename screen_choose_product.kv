#:kivy 2.1.0
<ScreenChooseProduct>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: layout_header
            orientation: "horizontal"
            padding: 20
			spacing: 50
			size_hint: 2, 0.15

			MDLabel:
				id: subtitle            
				text: "WATER DISPENSER MACHINE"
				halign: 'center'
				valign: 'middle'
				bold: True
				font_size: 32
				color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/Main_Logo.png'
                size_hint_x: 0.25
                allow_stretch: True                   


		# choose product layout
		MDBoxLayout:
			id: layout_title
			orientation: "vertical"
			md_bg_color: app.theme_cls.primary_color
			size_hint: 2, 0.1

			MDLabel:
				text: "CHOOSE PRODUCT"
				halign: 'center'
				valign: 'middle'    
				bold: True
				font_size: 24
				color: 1, 1, 1
				size_hint_y: 0.1

		MDBoxLayout:
			id: layout_product_type
			orientation: "horizontal"
			md_bg_color: app.theme_cls.accent_color
			size_hint: 2, 0.1
			padding:10
			spacing:10

			MDFillRoundFlatIconButton:
				id: bt_cold
				icon: "snowflake"
				text: "COLD"
				font_size: 24
				size_hint: 1, 1
				on_press: root.cold_mode(True)

			MDFillRoundFlatIconButton:
				id: bt_normal
				icon: "snowflake-off"
				text: "NORMAL"
				font_size: 24
				size_hint: 1, 1
				on_press: root.cold_mode(False)

		MDGridLayout:
			id: layout_products
			cols:3
			md_bg_color: app.theme_cls.accent_color
			row_force_default: True
			row_default_height: 200
			size_hint: 2, 0.65
			padding:20
			spacing:20

			MDCard:
				id: product_220ml
				ripple_behavior: True
				on_press: root.choose_payment(220,1,1000)

				MDRelativeLayout:
					Image:
						source:'asset/220ml.png'
						pos_hint: {"center_x": .5, "center_y": .5}
						allow_stretch: True 

					MDLabel:
						text: "220ml"
						adaptive_size: True
						pos: "12dp", "12dp"
						bold: True

			MDCard:
				id: product_330ml
				ripple_behavior: True
				on_press: root.choose_payment(330,2,1500)

				MDRelativeLayout:
					Image:
						source:'asset/330ml.png'
						pos_hint: {"center_x": .5, "center_y": .5}
						allow_stretch: True 

					MDLabel:
						text: "330ml"
						adaptive_size: True
						pos: "12dp", "12dp"
						bold: True

			MDCard:
				id: product_600ml
				ripple_behavior: True
				on_press: root.choose_payment(600,3,2500)

				MDRelativeLayout:
					Image:
						source:'asset/600ml.png'
						pos_hint: {"center_x": .5, "center_y": .5}
						allow_stretch: True 

					MDLabel:
						text: "600ml"
						adaptive_size: True
						pos: "12dp", "12dp"
						bold: True

			MDCard:
				id: product_1000ml
				ripple_behavior: True
				on_press: root.choose_payment(1000,4,3500)

				MDRelativeLayout:
					Image:
						source:'asset/1000ml.png'
						pos_hint: {"center_x": .5, "center_y": .5}
						allow_stretch: True 

					MDLabel:
						text: "1000ml"
						adaptive_size: True
						pos: "12dp", "12dp"
						bold: True

	MDRelativeLayout:
		MDFillRoundFlatIconButton:
			id: bt_screen_info
			icon: "information"
			text: "INFO"
			font_size: 28
			size_hint: 0.4, 0.1
			pos_hint: {"center_x": .8, "center_y": .1}
			on_press: root.screen_info()
				