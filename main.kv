            id: screen_amp_chart
            screen_manager: screen_manager

    Screen:
        name: 'screen_qr_payment'
        ScreenQRPayment:
            id: screen_qr_payment
            screen_manager: screen_manager  
            
    Screen:
        name: 'screen_operate'
        ScreenOperate:
            id: screen_operate
            screen_manager: screen_manager

    Screen:
        name: 'screen_info'
        ScreenInfo:
            id: screen_info
            screen_manager: screen_manager

    Screen:
        name: 'screen_maintenance'
