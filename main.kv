#:kivy 2.1.0

#:import NoTransition kivy.uix.screenmanager.NoTransition
#:include screen_splash.kv
#:include screen_choose_screen.kv
#:include screen_uno_modules.kv
#:include screen_info.kv
#:include screen_operate.kv
#:include screen_maintenance.kv
#:include screen_qr_payment.kv

ScreenManager:
    id: screen_manager
    transition: NoTransition()
    Screen:
        name: 'screen_splash'
        ScreenSplash:
            app_window: app
            screen_manager: screen_manager
            screen_choose_screen: screen_choose_screen

    Screen:
        name: 'screen_choose_screen'
        ScreenChooseScreen:
            id: screen_choose_screen
            screen_manager: screen_manager
            screen_uno_modules: screen_uno_modules

    Screen:
        name: 'screen_uno_modules'
        ScreenChoosePayment:
            id: screen_uno_modules
            screen_manager: screen_manager

    Screen:
        name: 'screen_datalog_history'
        ScreenDatalogHistory:
            id: screen_datalog_history
            screen_manager: screen_manager

    Screen:
        name: 'screen_qr_payment'
        ScreenQRPayment:
            id: screen_qr_payment
            screen_manager: screen_manager  
            
    Screen:
        name: 'screen_operate'
        ScreenOperate:
            id: screen_operate
            screen_manager: screen_manager

    Screen:
        name: 'screen_info'
        ScreenInfo:
            id: screen_info
            screen_manager: screen_manager

    Screen:
        name: 'screen_maintenance'
        ScreenMaintenance:
            id: screen_maintenance
            screen_manager: screen_manager                  

