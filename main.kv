        ScreenMainMenu:
            id: screen_main_menu
            screen_manager: screen_manager
            screen_uno_modules: screen_uno_modules

    Screen:
        name: 'screen_uno_modules'
        ScreenChoosePayment:
            id: screen_uno_modules
